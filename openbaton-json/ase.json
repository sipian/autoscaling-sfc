{
  "name": "mah88",
  "vendor": "FOKUS",
  "version": "1.0",
  "vld": [
    {
      "name": "private"
    }
  ],
  "vnfd": [
    {
      "vendor": "fokus",
      "version": "0.2",
      "name": "http-sf",
      "type": "http",
      "endpoint": "generic",
      "vdu": [
        {
          "vm_image": [
            "ubuntu"
          ],
          "vimInstanceName": [
            "pop"
          ],
          "scale_in_out": 4,
          "vnfc": [
            {
              "connection_point": [
                {
                  "interfaceId": 0,
                  "virtual_link_reference": "private"
                }
              ]
            }
          ],
          "fault_management_policy": [
            {
              "name": "SERVICE FUNCTION is not reachable",
              "isVNFAlarm": false,
              "criteria": [
                {
                  "parameter_ref": "agent.ping",
                  "function": "nodata(40)",
                  "vnfc_selector": "at_least_one",
                  "comparison_operator": "=",
                  "threshold": "1"
                }
              ],
              "period": 20,
              "severity": "CRITICAL"
            }
          ],
          "high_availability": {
            "resiliencyLevel": "ACTIVE_STANDBY_STATELESS",
            "redundancyScheme": "1:N"
          },
          "monitoring_parameter": [
            "agent.ping"
          ]
        }
      ],
      "auto_scale_policy": [
        {
          "name": "scale-out",
          "threshold": 100,
          "period": 30,
          "cooldown": 90,
          "comparisonOperator": ">=",
          "mode": "REACTIVE",
          "type": "WEIGHTED",
          "alarms": [
            {
              "metric": "system.cpu.load[percpu,avg1]",
              "statistic": "avg",
              "comparisonOperator": ">",
              "threshold": 0.70,
              "weight": 1
            }
          ],
          "actions": [
            {
              "type": "SCALE_OUT",
              "value": "1"
            }
          ]
        }
      ],
      "virtual_link": [
        {
          "name": "private"
        }
      ],
      "lifecycle_event": [
        {
          "event": "INSTANTIATE",
          "lifecycle_events": [
            "configure.sh",
            "start_vxlan.sh"
          ]
        }
      ],
      "deployment_flavour": [
        {
          "flavour_key": "m1.small"
        }
      ],
      "vnfPackageLocation": "https://github.com/mah88/SF_VNF_scripts.git"
    }
  ]
}